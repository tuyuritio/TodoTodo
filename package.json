{
	"name": "todotodo",
	"displayName": "TodoTodo",
	"description": "VSCode Sidebar Todo",
	"keywords": [
		"todo",
		"todolist",
		"item manage",
		"待办事项"
	],
	"icon": "resources/icon/icon.png",
	"version": "2.0.0",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"publisher": "KinoshitaTatsukana",
	"repository": {
		"type": "git",
		"url": "https://gitee.com/tatsukana/todo-todo.git"
	},
	"bugs": {
		"url": "https://gitee.com/tatsukana/todo-todo/issues"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "TodoTodo",
				"properties": {
					"todotodo.path": {
						"description": "清单文件目录路径（绝对路径）。若为空则使用默认路径。\n注：使用默认路径在插件更新时本地事项将被清空！",
						"type": "string"
					},
					"todotodo.page.editor.add.action": {
						"description": "编辑器在新建事项后的行为。",
						"type": "string",
						"default": "remain",
						"enum": [
							"remain",
							"clear",
							"close"
						],
						"enumDescriptions": [
							"保留已填信息。",
							"清空已填信息。",
							"关闭编辑器。"
						]
					},
					"todotodo.list.empty.show": {
						"description": "是否显示空清单。",
						"type": "boolean",
						"default": false
					},
					"todotodo.list.remove.remind": {
						"description": "在删除清单时显示确认对话框。",
						"type": "boolean",
						"default": true
					},
					"todotodo.list.todo.gaze.enable": {
						"description": "是否启用专注事项。",
						"type": "boolean",
						"default": true
					},
					"todotodo.list.todo.shut.remind.ahead": {
						"description": "事项逾期预警时间。\n格式: \"HH:MM\" (请小于20:00)",
						"type": "string",
						"default": "01:00"
					},
					"todotodo.list.delete.remind": {
						"description": "在删除事项时显示确认对话框。"
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "todo_bar",
					"title": "TodoTodo",
					"icon": "resources/icon/icon_platform.svg"
				}
			]
		},
		"views": {
			"todo_bar": [
				{
					"id": "task_tree",
					"name": "每日打卡",
					"visibility": "collapsed",
					"icon": "resources/icon/icon_task.svg"
				},
				{
					"id": "todo_tree",
					"name": "待办事项",
					"visibility": "visible",
					"icon": "resources/icon/icon_item.svg"
				},
				{
					"id": "done_tree",
					"name": "已办事项",
					"visibility": "visible",
					"icon": "resources/icon/icon_item.svg"
				},
				{
					"id": "fail_tree",
					"name": "未办事项",
					"visibility": "collapsed",
					"icon": "resources/icon/icon_item.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "task_tree",
				"contents": "当前暂无打卡任务。"
			},
			{
				"view": "todo_tree",
				"contents": "当前暂无待办事项。\n[$(add) 新建待办事项](command:todotodo.list.edit_item)"
			},
			{
				"view": "done_tree",
				"contents": "当前暂无已办事项。"
			},
			{
				"view": "fail_tree",
				"contents": "当前暂无失效事项。"
			}
		],
		"commands": [
			{
				"command": "todotodo.file.write",
				"title": "保存数据",
				"icon": "$(save)"
			},
			{
				"command": "todotodo.refresh",
				"title": "刷新视图",
				"icon": "refresh"
			},
			{
				"command": "todotodo.page.show",
				"title": "事项主页",
				"icon": "$(window)"
			},
			{
				"command": "todotodo.task.change_all",
				"title": "变更所有任务状态",
				"icon": "$(check-all)"
			},
			{
				"command": "todotodo.task.establish",
				"title": "创建任务",
				"icon": "$(add)"
			},
			{
				"command": "todotodo.task.calendar",
				"title": "打卡日历",
				"icon": "$(calendar)"
			},
			{
				"command": "todotodo.task.terminate",
				"title": "终止任务",
				"icon": "$(trash)"
			},
			{
				"command": "todotodo.list.remove",
				"title": "移除清单",
				"icon": "$(trash)"
			},
			{
				"command": "todotodo.list.show",
				"title": "清单列表",
				"icon": "$(notebook)"
			},
			{
				"command": "todotodo.list.edit_item",
				"title": "添加事项",
				"icon": "$(add)"
			},
			{
				"command": "todotodo.todo.delete",
				"title": "删除事项",
				"icon": "$(trash)"
			},
			{
				"command": "todotodo.todo.accomplish",
				"title": "已完成",
				"icon": "$(pass)"
			},
			{
				"command": "todotodo.todo.shut",
				"title": "未完成",
				"icon": "$(error)"
			},
			{
				"command": "todotodo.todo.gaze",
				"title": "事项专注",
				"icon": "$(play)"
			},
			{
				"command": "todotodo.todo.undo",
				"title": "取消专注",
				"icon": "$(stop-circle)"
			},
			{
				"command": "todotodo.todo.remove",
				"title": "移除条目",
				"icon": "$(trash)"
			},
			{
				"command": "todotodo.done.redo",
				"title": "重做事项",
				"icon": "$(redo)"
			},
			{
				"command": "todotodo.done.clear",
				"title": "清空已办事项",
				"icon": "#(clear-all)"
			},
			{
				"command": "todotodo.fail.restart",
				"title": "重启事项",
				"icon": "$(reply)"
			},
			{
				"command": "todotodo.fail.restart_all",
				"title": "重启全部未办事项",
				"icon": "$(clock)"
			},
			{
				"command": "todotodo.fail.delete",
				"title": "删除事项",
				"icon": "$(trash)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "todotodo.file.write",
					"when": "view == todo_tree"
				},
				{
					"command": "todotodo.page.show",
					"when": "view == todo_tree"
				},
				{
					"command": "todotodo.task.establish",
					"group": "navigation",
					"when": "view == task_tree"
				},
				{
					"command": "todotodo.task.change_all",
					"group": "navigation",
					"when": "view == task_tree"
				},
				{
					"command": "todotodo.list.show",
					"group": "navigation",
					"when": "view == todo_tree"
				},
				{
					"command": "todotodo.list.edit_item",
					"group": "navigation",
					"when": "view == todo_tree"
				},
				{
					"command": "todotodo.refresh",
					"when": "view == todo_tree"
				},
				{
					"command": "todotodo.done.clear",
					"group": "navigation",
					"when": "view == done_tree"
				},
				{
					"command": "todotodo.fail.restart_all",
					"group": "navigation",
					"when": "view == fail_tree"
				}
			],
			"view/item/context": [
				{
					"command": "todotodo.task.calendar",
					"group": "inline",
					"when": "viewItem == task_item"
				},
				{
					"command": "todotodo.task.terminate",
					"when": "viewItem == task_item"
				},
				{
					"command": "todotodo.list.remove",
					"when": "viewItem == todo_list"
				},
				{
					"command": "todotodo.todo.delete",
					"when": "viewItem == todo_item"
				},
				{
					"command": "todotodo.todo.gaze",
					"group": "inline",
					"when": "viewItem == todo_item && config.todotodo.list.todo.gaze.enable"
				},
				{
					"command": "todotodo.todo.undo",
					"group": "inline",
					"when": "viewItem == gaze_item"
				},
				{
					"command": "todotodo.todo.accomplish",
					"group": "inline",
					"when": "viewItem == todo_item || viewItem == gaze_item"
				},
				{
					"command": "todotodo.todo.shut",
					"group": "inline",
					"when": "viewItem == todo_item"
				},
				{
					"command": "todotodo.todo.remove",
					"group": "inline",
					"when": "viewItem == todo_entry"
				},
				{
					"command": "todotodo.done.redo",
					"group": "inline",
					"when": "viewItem == done_item"
				},
				{
					"command": "todotodo.fail.restart",
					"group": "inline",
					"when": "viewItem == fail_item"
				}
			]
		},
		"keybindings": [
			{
				"key": "ctrl+shift+n",
				"command": "todotodo.list.edit_item"
			},
			{
				"key": "ctrl+s",
				"command": "todotodo.file.write",
				"when": "focusedView == todo_tree || focusedView == task_tree"
			},
			{
				"key": "f5",
				"command": "todotodo.refresh",
				"when": "focusedView == todo_tree || focusedView == task_tree"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.61.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.17.27",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	},
	"type": "commonjs"
}

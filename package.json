{
	"name": "todotodo",
	"displayName": "TodoTodo",
	"description": "VSCode Sidebar Todo",
	"keywords": [
		"todo",
		"todolist"
	],
	"icon": "resources/icon/icon.png",
	"version": "0.8.9",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"publisher": "KinoshitaTatsukana",
	"repository": {
		"type": "git",
		"url": "https://gitee.com/tatsukana/todo-todo.git"
	},
	"bugs": {
		"url": "https://gitee.com/tatsukana/todo-todo/issues"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "TodoTodo",
				"properties": {
					"todotodo.path": {
						"description": "清单文件目录路径（绝对路径）。若为空则使用默认路径。\n注：使用默认路径在插件更新时本地事项将被清空！\n注：该设置将在下次重启时生效。",
						"type": "string"
					},
					"todotodo.page.editor.add.after.action": {
						"description": "编辑器在新建事项后的行为。",
						"type": "string",
						"default": "remain",
						"enum": [
							"remain",
							"clear",
							"close"
						],
						"enumDescriptions": [
							"保留已填信息。",
							"清空已填信息。",
							"关闭编辑器。"
						]
					},
					"todotodo.page.log.start.remind": {
						"description": "启动时在日志中显示欢迎文本。",
						"type": "boolean",
						"default": true
					},
					"todotodo.page.log.color": {
						"description": "启用日志色彩高亮。",
						"type": "boolean",
						"default": true
					},
					"todotodo.list.todo.item.delete.remind": {
						"description": "在删除事项时显示确认对话框。",
						"type": "boolean",
						"default": true
					},
					"todotodo.list.todo.item.gaze.style": {
						"description": "正在办理事项的提示方式",
						"type": "string",
						"default": "flash",
						"enum": [
							"flash",
							"highlight",
							"disabled"
						],
						"enumDescriptions": [
							"图标闪烁。",
							"图标高亮。",
							"禁用\"正在办理\"功能。"
						]
					},
					"todotodo.list.todo.item.time.show": {
						"description": "在事项右侧显示截止时间。",
						"type": "boolean",
						"default": true
					},
					"todotodo.list.todo.delete.remind": {
						"description": "在删除清单时显示确认对话框。",
						"type": "boolean",
						"default": true
					},
					"todotodo.list.todo.delete.method": {
						"description": "删除清单时，原有事项的处理方法。",
						"type": "string",
						"default": "move",
						"enum": [
							"move",
							"remove"
						],
						"enumDescriptions": [
							"移动至默认清单。",
							"全部删除。"
						]
					},
					"todotodo.list.todo.empty.show": {
						"type": "boolean",
						"default": false,
						"description": "是否显示空清单。"
					},
					"todotodo.list.todo.empty.text": {
						"description": "空Todo清单视图提示文本。\n注：该设置将在下次重启时生效。",
						"type": "string",
						"default": "暂时没有待办事项，芜湖起飞！"
					},
					"todotodo.list.done.empty.text": {
						"description": "空Done清单视图提示文本。\n注：该设置将在下次重启时生效。",
						"type": "string",
						"default": "暂时没有已办事项，加油冲冲冲！"
					},
					"todotodo.list.fail.empty.text": {
						"description": "空Fail清单视图提示文本。\n注：该设置将在下次重启时生效。",
						"type": "string",
						"default": "暂时没有失效事项，不错加油！"
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "todo_bar",
					"title": "TodoTodo",
					"icon": "resources/icon/icon_platform.svg"
				}
			]
		},
		"views": {
			"todo_bar": [
				{
					"id": "todo_tree",
					"name": "待办事项",
					"visibility": "visible",
					"icon": "resources/icon/icon_item.svg"
				},
				{
					"id": "done_tree",
					"name": "已办事项",
					"visibility": "visible",
					"icon": "resources/icon/icon_item.svg"
				},
				{
					"id": "fail_tree",
					"name": "未办事项",
					"visibility": "collapsed",
					"icon": "resources/icon/icon_item.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "todo_tree",
				"contents": "暂时没有待办事项，芜湖起飞！\n[$(add) 新增待办事项](command:page.add)"
			},
			{
				"view": "done_tree",
				"contents": "暂时没有已办事项，加油冲冲冲！"
			},
			{
				"view": "fail_tree",
				"contents": "暂时没有失效事项，不错加油！"
			}
		],
		"commands": [
			{
				"command": "page.show",
				"title": "事项主页",
				"icon": "$(window)"
			},
			{
				"command": "page.add",
				"title": "新增待办事项",
				"icon": "$(add)"
			},
			{
				"command": "page.edit",
				"title": "修改事项",
				"icon": "$(edit)"
			},
			{
				"command": "page.list",
				"title": "清单列表",
				"icon": "$(notebook)"
			},
			{
				"command": "list.delete",
				"title": "删除清单",
				"icon": "$(trash)"
			},
			{
				"command": "todo.refresh",
				"title": "刷新列表",
				"icon": "$(refresh)",
				"shortTitle": "RefreshTree",
				"category": "待办事项"
			},
			{
				"command": "todo.accomplish",
				"title": "已完成",
				"icon": "$(pass)"
			},
			{
				"command": "todo.gaze",
				"title": "当前办理",
				"icon": "$(play)"
			},
			{
				"command": "todo.undo",
				"title": "取消办理",
				"icon": "$(stop-circle)"
			},
			{
				"command": "todo.shut",
				"title": "未完成",
				"icon": "$(error)"
			},
			{
				"command": "todo.delete",
				"title": "删除事项",
				"icon": "$(trash)"
			},
			{
				"command": "todo.save",
				"title": "保存数据",
				"icon": "${save}"
			},
			{
				"command": "todo.read",
				"title": "读取数据",
				"icon": "${symbol-constant}"
			},
			{
				"command": "done.clear",
				"title": "清空已办事项",
				"icon": "$(clear-all)",
				"category": "已办事项"
			},
			{
				"command": "done.redo",
				"title": "重做事项",
				"icon": "$(redo)"
			},
			{
				"command": "fail.restart",
				"title": "重启事项",
				"icon": "$(reply)"
			},
			{
				"command": "fail.restart_all",
				"title": "重启全部未办事项",
				"icon": "$(clock)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "page.show",
					"when": "view == todo_tree"
				},
				{
					"command": "page.list",
					"group": "navigation",
					"when": "view == todo_tree"
				},
				{
					"command": "page.add",
					"group": "navigation",
					"when": "view == todo_tree"
				},
				{
					"command": "todo.refresh",
					"when": "view == todo_tree"
				},
				{
					"command": "todo.save",
					"when": "view == todo_tree"
				},
				{
					"command": "done.clear",
					"group": "navigation",
					"when": "view == done_tree"
				},
				{
					"command": "fail.restart_all",
					"group": "navigation",
					"when": "view == fail_tree"
				}
			],
			"view/item/context": [
				{
					"command": "list.delete",
					"when": "viewItem == todo_list"
				},
				{
					"command": "page.edit",
					"when": "viewItem == todo_item"
				},
				{
					"command": "todo.delete",
					"when": "viewItem == todo_item"
				},
				{
					"command": "todo.gaze",
					"group": "inline",
					"when": "viewItem == todo_item && config.todotodo.list.todo.item.gaze.style != disabled"
				},
				{
					"command": "todo.undo",
					"group": "inline",
					"when": "viewItem == gaze_item"
				},
				{
					"command": "todo.accomplish",
					"group": "inline",
					"when": "viewItem == todo_item || viewItem == gaze_item"
				},
				{
					"command": "todo.shut",
					"group": "inline",
					"when": "viewItem == todo_item"
				},
				{
					"command": "done.redo",
					"group": "inline",
					"when": "viewItem == done_item"
				},
				{
					"command": "fail.restart",
					"group": "inline",
					"when": "viewItem == fail_item"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.61.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.17.27",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	},
	"type": "commonjs"
}